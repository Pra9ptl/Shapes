<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SideCounter">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Count the Sides"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="30dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show the shape"
        android:layout_gravity="center"
        android:onClick="showShape"
        />

    <ImageView
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:id="@+id/diplayView"
        android:layout_margin="5dp"
        android:background="#fff"
        android:padding="5dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Score: "
            android:layout_weight="0.5"
            android:textSize="20dp"
            />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Your Answer Display"
        android:layout_weight="1.5"
        android:layout_gravity="center"
        android:id="@+id/answerDisplay"
        android:textAlignment="center"
        android:textSize="20dp"
        />

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check Your Answer"
        android:layout_gravity="center"
        android:onClick="checkAnswer"
        android:layout_marginTop="20dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="go back"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:onClick="goback"
        />

</LinearLayout>